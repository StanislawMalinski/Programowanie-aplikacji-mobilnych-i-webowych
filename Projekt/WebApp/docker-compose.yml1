version: '3.8'

services:
  pamiw_api:
      build:
          context: .
          dockerfile: Dockerfile
      ports:
          - "8080:8080"
          - "8081:8081"
      depends_on:
          - postgres
  postgres:
    image: 'postgres:latest'
    environment:
      - 'POSTGRES_DB=forumdb'
      - 'POSTGRES_PASSWORD=admin'
      - 'POSTGRES_USER=admin'
    ports:
      - '5432:5432'

volumes:
  postgres:
    driver: local
