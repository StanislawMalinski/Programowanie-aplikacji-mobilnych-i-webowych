@inject ILanguageService lang;
@inject UserContext user;

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">ForFace</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="forface/main" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span>@lang.GetPhrase("mainPage")
            </NavLink>
        </div>
        @if(user.IsAuthenticated){
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="forface/new">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span>@lang.GetPhrase("newPost")
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="forface/me/1">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span>@lang.GetPhrase("myProfile")
                </NavLink>
            </div>
        }
    </nav>
</div>

